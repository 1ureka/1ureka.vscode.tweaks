{
  "name": "1ureka-vscode-extension",
  "author": "1ureka",
  "publisher": "1ureka",
  "description": "A Visual Studio Code extension developed for personal use.",
  "version": "0.0.3",
  "main": "./dist/extension.js",
  "type": "module",
  "engines": {
    "vscode": "^1.106.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "1ureka VSCode 擴展設定",
      "properties": {
        "1ureka.vscodeResourcePath": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "markdownDescription": "設定 VSCode 資源目錄路徑，用於自訂樣式注入功能。\n\n範例：`C:/Users/YourName/AppData/Local/Programs/Microsoft VS Code/resources/app/out/vs`"
        }
      }
    },
    "commands": [
      {
        "command": "extension.openBlender",
        "title": "開啟 Blender"
      },
      {
        "command": "extension.openWithBlender",
        "title": "以 Blender 開啟"
      },
      {
        "command": "extension.openPainter",
        "title": "開啟 Painter"
      },
      {
        "command": "extension.openWithPainter",
        "title": "以 Painter 開啟"
      },
      {
        "command": "extension.openImageWall",
        "title": "開啟圖片牆"
      },
      {
        "command": "extension.openImageWallFromExplorer",
        "title": "以圖片牆顯示"
      },
      {
        "command": "extension.injectStyles",
        "title": "注入自訂樣式"
      },
      {
        "command": "extension.restoreStyles",
        "title": "還原樣式設定"
      },
      {
        "command": "extension.imageViewer.resetTransform",
        "title": "重設圖片縮放與位置"
      },
      {
        "command": "extension.imageViewer.eyeDropper",
        "title": "吸取顏色並複製到剪貼簿"
      }
    ],
    "customEditors": [
      {
        "viewType": "1ureka.imageViewer",
        "displayName": "圖片檢視器",
        "selector": [
          {
            "filenamePattern": "*.{jpg,jpeg,png,gif,bmp,webp,tiff,tif,svg}"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "fileTimestamp.catchAll",
        "displayName": "File Timestamp Tracker",
        "selector": [
          {
            "filenamePattern": "*"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .blend",
          "command": "extension.openWithBlender",
          "group": "navigation@100"
        },
        {
          "when": "resourceExtname == .spp",
          "command": "extension.openWithPainter",
          "group": "navigation@100"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.openImageWallFromExplorer",
          "group": "navigation@100"
        }
      ],
      "webview/context": [
        {
          "command": "extension.imageViewer.resetTransform",
          "when": "webviewId == '1ureka.imageViewer'",
          "group": "navigation@100"
        },
        {
          "command": "extension.imageViewer.eyeDropper",
          "when": "webviewId == '1ureka.imageViewer'",
          "group": "navigation@100"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.openBlender",
          "when": "isWindows"
        },
        {
          "command": "extension.openPainter",
          "when": "isWindows"
        },
        {
          "command": "extension.openImageWall"
        },
        {
          "command": "extension.injectStyles"
        },
        {
          "command": "extension.restoreStyles"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.5",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "node-html-parser": "^7.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "typescript": "^5.9.3"
  }
}

{
  "name": "1ureka-vscode-extension",
  "author": "1ureka",
  "publisher": "1ureka",
  "description": "A Visual Studio Code extension developed for personal use.",
  "version": "0.1.0",
  "main": "./dist/extension.js",
  "type": "module",
  "engines": {
    "vscode": "^1.106.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "1ureka VSCode 擴展設定",
      "properties": {
        "1ureka.vscodeResourcePath": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "markdownDescription": "設定 VSCode 資源目錄路徑,用於自訂樣式注入功能。\n\n範例：`C:/Users/YourName/AppData/Local/Programs/Microsoft VS Code/resources/app/out/vs`"
        },
        "1ureka.blenderPath": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "markdownDescription": "設定 Blender 執行檔路徑。若未設定,將自動搜尋常見安裝位置。\n\n範例：`C:/Program Files/Blender Foundation/Blender 4.0/blender.exe`"
        },
        "1ureka.painterPath": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "markdownDescription": "設定 Adobe Substance 3D Painter 執行檔路徑。若未設定,將自動搜尋常見安裝位置。\n\n範例：`C:/Program Files/Adobe/Adobe Substance 3D Painter/Adobe Substance 3D Painter.exe`"
        }
      }
    },
    "commands": [
      {
        "command": "extension.openBlender",
        "title": "開啟 Blender"
      },
      {
        "command": "extension.openWithBlender",
        "title": "以 Blender 開啟"
      },
      {
        "command": "extension.openPainter",
        "title": "開啟 Painter"
      },
      {
        "command": "extension.openWithPainter",
        "title": "以 Painter 開啟"
      },
      {
        "command": "extension.openImageWall",
        "title": "開啟圖片牆"
      },
      {
        "command": "extension.openImageWallFromExplorer",
        "title": "以圖片牆顯示"
      },
      {
        "command": "extension.imageWall.setLayoutStandard",
        "title": "標準布局"
      },
      {
        "command": "extension.imageWall.setLayoutWoven",
        "title": "編織布局"
      },
      {
        "command": "extension.imageWall.setLayoutMasonry",
        "title": "磚牆布局 (預設)"
      },
      {
        "command": "extension.imageWall.setSizeSmall",
        "title": "小尺寸"
      },
      {
        "command": "extension.imageWall.setSizeMedium",
        "title": "中尺寸 (預設)"
      },
      {
        "command": "extension.imageWall.setSizeLarge",
        "title": "大尺寸"
      },
      {
        "command": "extension.injectStyles",
        "title": "注入自訂樣式"
      },
      {
        "command": "extension.restoreStyles",
        "title": "還原樣式設定"
      },
      {
        "command": "extension.imageViewer.resetTransform",
        "title": "重設圖片縮放與位置"
      },
      {
        "command": "extension.imageViewer.eyeDropper",
        "title": "吸取顏色並複製到剪貼簿"
      }
    ],
    "customEditors": [
      {
        "viewType": "1ureka.imageViewer",
        "displayName": "圖片檢視器",
        "selector": [
          {
            "filenamePattern": "*.{jpg,jpeg,png,gif,bmp,webp,tiff,tif}"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "1ureka.fileMetadata.catchAll",
        "displayName": "檔案屬性檢視器",
        "selector": [
          {
            "filenamePattern": "*"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .blend",
          "command": "extension.openWithBlender",
          "group": "navigation@100"
        },
        {
          "when": "resourceExtname == .spp",
          "command": "extension.openWithPainter",
          "group": "navigation@100"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.openImageWallFromExplorer",
          "group": "navigation@100"
        }
      ],
      "webview/context": [
        {
          "command": "extension.imageViewer.resetTransform",
          "when": "webviewId == '1ureka.imageViewer'",
          "group": "navigation@100"
        },
        {
          "command": "extension.imageViewer.eyeDropper",
          "when": "webviewId == '1ureka.imageViewer'",
          "group": "navigation@100"
        },
        {
          "submenu": "imageWall.layout",
          "when": "webviewId == '1ureka.imageWall'",
          "group": "1_layout"
        },
        {
          "submenu": "imageWall.size",
          "when": "webviewId == '1ureka.imageWall'",
          "group": "2_size"
        }
      ],
      "imageWall.layout": [
        {
          "command": "extension.imageWall.setLayoutStandard",
          "group": "1_modes@1"
        },
        {
          "command": "extension.imageWall.setLayoutWoven",
          "group": "1_modes@2"
        },
        {
          "command": "extension.imageWall.setLayoutMasonry",
          "group": "1_modes@3"
        }
      ],
      "imageWall.size": [
        {
          "command": "extension.imageWall.setSizeSmall",
          "group": "1_sizes@1"
        },
        {
          "command": "extension.imageWall.setSizeMedium",
          "group": "1_sizes@2"
        },
        {
          "command": "extension.imageWall.setSizeLarge",
          "group": "1_sizes@3"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.openBlender",
          "when": "isWindows"
        },
        {
          "command": "extension.openPainter",
          "when": "isWindows"
        },
        {
          "command": "extension.openImageWall"
        },
        {
          "command": "extension.injectStyles"
        },
        {
          "command": "extension.restoreStyles"
        }
      ]
    },
    "submenus": [
      {
        "id": "imageWall.layout",
        "label": "圖片牆布局"
      },
      {
        "id": "imageWall.size",
        "label": "圖片牆尺寸"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.js"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.5",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "node-html-parser": "^7.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "typescript": "^5.9.3",
    "zustand": "^5.0.8"
  }
}
